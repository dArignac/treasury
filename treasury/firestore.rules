service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow write: if request.auth.uid == userId;
      allow read: if true;

      match /movies/{anyDocument} {
        allow write: if request.auth.uid == userId;
        allow read: if true;
      }
    }
    match /settings/{userId} {
    	allow write: if request.auth.uid == userId;
      allow read: if true;
    }
  }
}
